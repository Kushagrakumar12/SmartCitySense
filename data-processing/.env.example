# Configuration for Person 1's Kafka/Firebase
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC=citypulse_events
KAFKA_GROUP_ID=data_processing_group

# Firebase (if Person 1 uses Firebase OR for your storage)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_PATH=path/to/firebase-credentials.json
FIREBASE_INPUT_COLLECTION=events  # Where Person 1 writes
FIREBASE_OUTPUT_COLLECTION=processed_events  # Where you write

# Google Maps Geocoding API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Bangalore City Configuration
CITY_CENTER_LAT=12.9716
CITY_CENTER_LON=77.5946
CITY_RADIUS_KM=50

# Deduplication Settings
SIMILARITY_THRESHOLD=0.85  # 0-1, higher = more strict
TIME_WINDOW_MINUTES=60  # Consider events within this window
DISTANCE_THRESHOLD_KM=2  # Events within this distance might be duplicates

# Processing Settings
BATCH_SIZE=50  # Process events in batches
PROCESSING_INTERVAL_SECONDS=30  # Check for new events every N seconds
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO

# Performance
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
PARALLEL_PROCESSING=true
NUM_WORKERS=4
