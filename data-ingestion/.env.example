# API Keys - Copy this to .env and fill in your actual keys

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Twitter/X API (v2)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=CityPulseAI/1.0

# Instagram (if available)
INSTAGRAM_ACCESS_TOKEN=your_instagram_token

# Civic Portal APIs
CIVIC_PORTAL_API_KEY=your_civic_api_key
CIVIC_PORTAL_BASE_URL=https://api.civicportal.gov/v1

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC=citypulse_events

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_PATH=path/to/firebase-credentials.json

# General Configuration
LOG_LEVEL=INFO
POLLING_INTERVAL_SECONDS=300  # 5 minutes
BANGALORE_LAT=12.9716
BANGALORE_LON=77.5946
CITY_RADIUS_KM=50
